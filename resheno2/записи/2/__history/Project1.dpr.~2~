program Project1;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils,
  Unit1 in 'Unit1.pas';

type
  user = record
    id:Integer;
    f:string;
    n:string;
    o:string;
    add:string;
    tel:integer;
    item:string;
  end;

  var
  i:Integer;
  ar: Array[1..30] of user;
begin
  for i := 1 to Length(ar) do begin
    writeln('USER ID ', i);
    ar[i].id := i;
    write('Фамилия: ');
    readln(ar[i].f);
    write('Имя: ');
    readln(ar[i].n);
    write('Отечество: ');
    readln(ar[i].o);
    write('Адрес: ');
    readln(ar[i].add);
    write('Телефон: ');
    readln(ar[i].tel);
    write('Предмет: ');
    readln(ar[i].item);
  end;

  for i := 1 to Length(ar) do begin
    if(ar[i].item = 'т') or (ar[i].item = 'телевизор') then begin
      writeln('USER ID ', ar[i].id);
      writeln('Фамилия ', ar[i].f);
      writeln('Имя ', ar[i].n);
      writeln('Адрес ', ar[i].item);
    end;
  end;
  readln;
end.
